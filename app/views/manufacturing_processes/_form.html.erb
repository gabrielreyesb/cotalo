<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <% if form.object.errors.any? %>
        <div class="alert alert-danger">
          <h2><%= pluralize(form.object.errors.count, "error") %> prohibited this process from being saved:</h2>
          <ul>
            <% form.object.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :name, "Nombre:", class: "form-label" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :description, "Descripción:", class: "form-label" %>
        <%= form.text_field :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :specifications, "Especificaciones:", class: "form-label" %>
        <%= form.text_field :specifications, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :maximum_width, "Ancho máximo:", class: "form-label" %>
        <%= form.number_field :maximum_width, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :maximum_length, "Largo máximo:", class: "form-label" %>
        <%= form.number_field :maximum_length, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :minimum_width, "Ancho mínimo:", class: "form-label" %>
        <%= form.number_field :minimum_width, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :minimum_length, "Largo mínimo:", class: "form-label" %>
        <%= form.number_field :minimum_length, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :price, "Precio:", class: "form-label" %>
        <%= form.number_field :price, step: :any, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :unit_id, "Unidad:", class: "form-label" %>
        <%= form.collection_select :unit_id, Unit.all, :id, :description, {}, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :comments, "Comentarios:", class: "form-label" %>
        <%= form.text_field :comments, class: "form-control" %>
      </div>

      <div class="form-actions text-center mt-4">
        <%= form.submit "Guardar", class: "btn btn-green" %>
        <%= link_to "Cancelar", manufacturing_processes_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>