<turbo-frame id="main-content">
  <div class="container mt-4">
    <h1 class="text-center mb-4">Procesos de Manufactura</h1> 
    <div class="row">
      <div class="col-md-12">
        <table class="table table-hover table-bordered">
          <thead style="background-color: #76a835; color: white"> 
            <tr>
              <th>Nombre</th> 
              <th>Descripción</th>
              <th>Especificaciones</th>
              <th>Ancho max</th>
              <th>Largo max</th>
              <th>Ancho min</th>
              <th>Largo min</th>
              <th>Precio</th>
              <th>Unidad</th>
              <th>Comentarios</th>
              <th colspan="3">Acciones</th> 
            </tr>
          </thead>

          <tbody>
            <% @manufacturing_processes.each do |process| %> 
              <tr>
                <td><%= process.name %></td> 
                <td><%= process.description %></td>
                <td><%= process.specifications %></td> 
                <td><%= process.maximum_width %></td> 
                <td><%= process.maximum_length %></td> 
                <td><%= process.minimum_width %></td> 
                <td><%= process.minimum_length %></td> 
                <td><%= process.price %></td>
                <td><%= process.unit.description %></td> 
                <td><%= process.comments %></td> 
                <td><%= link_to 'Ver', process, class: 'btn btn-sm btn-outline-success' %></td> 
                <td><%= link_to 'Editar', edit_manufacturing_process_path(process), class: 'btn btn-sm btn-outline-primary' %></td> 
                <td><%= link_to 'Eliminar', process, method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-sm btn-outline-danger' %></td> 
              </tr>
            <% end %>
          </tbody>
        </table>

        <div class="text-center mt-3">
          <%= link_to 'Nuevo Proceso', new_manufacturing_process_path, class: 'btn btn-green' %> 
        </div>
      </div>
    </div>
  </div>
</turbo-frame>