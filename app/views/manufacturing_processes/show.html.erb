<%= turbo_frame_tag "main-content" do %>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card shadow border-0 mb-4">
          <div class="card-header bg-transparent">
            <h1 class="text-center mb-0"><%= @manufacturing_process.description %></h1>
          </div>

          <div class="card-body">
            <div class="row">
              <div class="col-md-6 mb-3">
                <label class="form-label"><strong>Dimensiones máximas:</strong></label>
                <div class="mb-2">
                  <strong>Largo:</strong> <%= @manufacturing_process.maximum_length %> cm
                </div>
                <div class="mb-2">
                  <strong>Ancho:</strong> <%= @manufacturing_process.maximum_width %> cm
                </div>
              </div>

              <div class="col-md-6 mb-3">
                <label class="form-label"><strong>Dimensiones mínimas:</strong></label>
                <div class="mb-2">
                  <strong>Largo:</strong> <%= @manufacturing_process.minimum_length %> cm
                </div>
                <div class="mb-2">
                  <strong>Ancho:</strong> <%= @manufacturing_process.minimum_width %> cm
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <label class="form-label"><strong>Detalles:</strong></label>
                <div class="mb-2">
                  <strong>Precio:</strong> <%= number_to_currency(@manufacturing_process.price) %>
                </div>
                <div>
                  <strong>Unidad de medida:</strong> <%= @manufacturing_process.unit.try(:description) || @manufacturing_process.unit.try(:name) %>
                </div>
              </div>

              <% if @manufacturing_process.specifications.present? %>
                <div class="col-md-6 mb-3">
                  <label class="form-label"><strong>Especificaciones:</strong></label>
                  <div><%= @manufacturing_process.specifications %></div>
                </div>
              <% end %>
            </div>

            <% if @manufacturing_process.comments.present? %>
              <div class="mb-4">
                <label class="form-label"><strong>Comentarios:</strong></label>
                <div><%= @manufacturing_process.comments %></div>
              </div>
            <% end %>

            <div class="text-center mt-4">
              <%= link_to 'Editar', edit_manufacturing_process_path(@manufacturing_process), class: 'btn btn-green me-2' %>
              <%= link_to 'Volver', manufacturing_processes_path, class: 'btn btn-secondary' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
