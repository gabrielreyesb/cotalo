<div id="quote-details" class="mt-4" style="display: none;">
  <div class="card">
    <div class="card-header">
      <h5>Detalles de la cotización</h5>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <p><strong>Proyecto:</strong> <span id="quote-project"></span></p>
          <p><strong>Cliente:</strong> <span id="quote-customer"></span></p>
          <p><strong>Organización:</strong> <span id="quote-organization"></span></p>
          <p><strong>Email:</strong> <span id="quote-email"></span></p>
        </div>
        <div class="col-md-6">
          <p><strong>Valor total:</strong> <span id="quote-total"></span></p>
          <p><strong>Valor por pieza:</strong> <span id="quote-per-piece"></span></p>
          <p><strong>Fecha:</strong> <span id="quote-date"></span></p>
        </div>
      </div>
      
      <%# Add comments section %>
      <div class="row mt-3">
        <div class="col-12">
          <p><strong>Comentarios:</strong></p>
          <div id="quote-comments" class="p-3 bg-light rounded"></div>
        </div>
      </div>
    </div>
  </div>
</div>