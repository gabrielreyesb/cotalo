<div class="container mt-4">
  <h1 class="text-center mb-4">Papeles</h1>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover table-bordered">
      <thead style="background-color: #76a835; color: white">
          <tr>
            <th>Descripción</th>
            <th>Tamaño</th>
            <th>Peso</th>
            <th colspan="3">Acciones</th>
          </tr>
      </thead>

        <tbody>
          <% @papers.each do |paper| %>
            <tr>
              <td><%= paper.description %></td>
              <td><%= paper.size %></td>
              <td><%= paper.weight %></td>
              <td><%= link_to 'Ver', paper, class: 'btn btn-sm btn-outline-success' %></td>
              <td><%= link_to 'Editar', edit_paper_path(paper), class: 'btn btn-sm btn-outline-primary' %></td>
              <td><%= link_to 'Eliminar', paper, method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-sm btn-outline-danger' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class="text-center mt-3">
        <%= link_to 'Nuevo Papel', new_form_papers_path, remote: true, class: 'btn btn-green' %>
      </div>
      <div class="mt-3">
        <%= link_to 'Volver a la página principal', root_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>