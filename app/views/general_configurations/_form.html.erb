<% if form.object.errors.any? %>
  <div class="alert alert-danger">
    <h2><%= pluralize(form.object.errors.count, "error") %> prohibited this configuration from being saved:</h2>
    <ul>
      <% form.object.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="form-group">
  <%= form.label :description, "Descripción:", class: "form-label" %>
  <%= form.text_field :description, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :amount, "Cantidad:", class: "form-label" %>
  <%= form.number_field :amount, step: :any, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :unit_id, "Unidad de medida:", class: "form-label" %>
  <%= form.collection_select :unit_id, current_user.units.order(:description), :id, :description, {}, class: "form-control" %>
</div>

<div class="form-actions text-center mt-4">
  <%= form.submit "Guardar configuración", class: "btn btn-green" %>
  <%= link_to "Volver a configuraciones generales", general_configurations_path, class: "btn btn-secondary" %>
</div>