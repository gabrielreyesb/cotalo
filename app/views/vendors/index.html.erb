<div class="container mt-4">
  <h1 class="text-center mb-4">Proveedores</h1>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover table-bordered">
        <thead style="background-color: #76a835; color: white"> 
          <tr>
            <th>Empresa</th>
            <th>Nombre de Contacto</th>
            <th colspan="3">Acciones</th> 
          </tr>
        </thead>

        <tbody>
          <% @vendors.each do |vendor| %>
            <tr>
              <td><%= vendor.company %></td>
              <td><%= vendor.contact_name %></td>
              <td><%= link_to 'Ver', vendor, class: 'btn btn-sm btn-outline-success' %></td>
              <td><%= link_to 'Editar', edit_vendor_path(vendor), class: 'btn btn-sm btn-outline-primary' %></td>
              <td><%= link_to 'Eliminar', vendor, method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-sm btn-outline-danger' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class="text-center mt-3">
        <%= link_to 'Nuevo Proveedor', new_vendor_path, class: 'btn btn-green' %>
      </div>
      <div class="text-center mt-3">
        <%= link_to 'Volver a la página principal', root_path, class: 'btn btn-green' %>
      </div>
    </div>
  </div>
</div>