<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-5 col-md-7">
      <div class="card shadow border-0 mb-0">
        <div class="card-header bg-transparent text-center pt-4">
          <%= image_tag "cotalo.jpg", class: "img-fluid", style: "max-width: 200px;" %>
        
          <hr class="mt-4">
          <h3 class="text-center mb-2">Iniciar sesión</h3>
          <div class="text-center text-muted mb-4">
            <small>Ingresa tus credenciales para acceder</small>
          </div>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group mb-3">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                  class: "form-control", placeholder: "Email" %>
            </div>

            <div class="form-group mb-3">
              <%= f.password_field :password, autocomplete: "current-password", 
                  class: "form-control", placeholder: "Contraseña" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="custom-control custom-checkbox mb-3">
                <%= f.check_box :remember_me, class: "custom-control-input" %>
                <%= f.label :remember_me, "Recordarme", class: "custom-control-label" %>
              </div>
            <% end %>

            <div class="text-center">
              <%= f.submit "Iniciar sesión", class: "btn btn-green my-4" %>
            </div>
          <% end %>

          <div class="text-center mt-3 mb-4">
            <small>
              ¿No tienes una cuenta? 
              <%= link_to "Regístrate aquí", new_registration_path(resource_name), class: "text-primary" %>
            </small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>