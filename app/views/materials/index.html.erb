<div class="container mt-4">
  <h1 class="text-center mb-4">Materiales</h1>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover table-bordered">
        <thead style="background-color: #76a835; color: white"> 
          <tr>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Ancho</th>
            <th>Largo</th>
            <th>Unidad</th>
            <th>Comentarios</th>
            <th colspan="3">Acciones</th> 
          </tr>
        </thead>

        <tbody>
          <% @materials.each do |material| %>
            <tr>
              <td><%= material.description %></td>
              <td><%= material.price %></td>
              <td><%= material.width %></td>
              <td><%= material.lenght %></td>
              <td><%= material.unit.description %></td> 
              <td><%= material.comments %></td>
              <td><%= link_to 'Ver', material, class: 'btn btn-sm btn-outline-success' %></td>
              <td><%= link_to 'Editar', edit_material_path(material), class: 'btn btn-sm btn-outline-primary' %></td>
              <td><%= link_to 'Eliminar', material, method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-sm btn-outline-danger' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class="text-center mt-3">
        <%= link_to 'Nuevo Material', new_material_path, class: 'btn btn-green' %>
      </div>
      <div class="text-center mt-3">
        <%= link_to 'Volver a la página principal', root_path, class: 'btn btn-green' %>
      </div>
    </div>
  </div>
</div>