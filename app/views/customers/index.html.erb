<div class="customers-index">
  <h2>Surtibox</h2>

  <div class="card">
    <div class="card-body">
      <p style="color: green"><%= notice %></p> 

      <h1>Customers</h1>

      <table class="table table-striped"> 
        <thead>
          <tr>
            <th>Name</th>
            <th>Contact</th>
            <th>Email</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.name %></td>
              <td><%= customer.contact %></td>
              <td><%= customer.email %></td>
              <td> <%# Actions cell %>
                <%= link_to "Show", customer, class: "btn btn-sm btn-info" %> 
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= link_to "New customer", new_customer_path, class: "btn btn-primary" %> 
    </div>
  </div>
</div>