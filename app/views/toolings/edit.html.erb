<turbo-frame id="main-content">
  <div class="container mt-4">
    <h1 class="text-center mb-4">
      <%= @tooling.new_record? ? 'Nuevo herramental' : 'Editar Herramental' %> 
    </div>
    <div class="row justify-content-center">
      <div class="col-md-8">
        <%= form_with(model: @tooling, data: { turbo_frame: "_top" }) do |form| %>
          <% if @tooling.errors.any? %>
            <div style="color: red">
              <h2><%= pluralize(tooling.errors.count, "error") %> prohibited this tooling from being saved:</h2>

              <ul>
                <% @tooling.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group"> <%# Added class for Bootstrap styling %>
            <%= form.label :description, "Descripción:", style: "display: block" %>
            <%= form.text_field :description, class: "form-control" %> <%# Added class for Bootstrap styling %>
          </div>

          <div class="form-group"> <%# Added class for Bootstrap styling %>
            <%= form.label :price, "Precio:", style: "display: block" %>
            <%= form.text_field :price, class: "form-control" %> <%# Added class for Bootstrap styling %>
          </div>

          <div class="form-group"> <%# Added class for Bootstrap styling %>
            <%= form.label :unit_id, "Unidad:", style: "display: block" %>
            <%= form.collection_select :unit_id, current_user.units.order(:description), :id, :description, {}, class: "form-control" %> <%# Added class for Bootstrap styling %>
          </div>

          <div class="form-group"> <%# Added class for Bootstrap styling %>
            <%= form.label :comments, "Comentarios:", style: "display: block" %>
            <%= form.text_field :comments, class: "form-control" %> <%# Added class for Bootstrap styling %>
          </div>

          <div class="text-center mt-3"> <%# Added class for centering %>
            <%= form.submit "Guardar cambios", class: "btn btn-green" %> <%# Added classes for styling %>
            <%= link_to 'Volver a la página principal', root_path, class: 'btn btn-green' %> <%# Added classes for styling %>
          </div> <%# Added closing tag %>
        <% end %>
      </div>
    </div>
  </div>
</turbo-frame>