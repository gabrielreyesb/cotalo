<p style="color: green"><%= notice %></p>

<turbo-frame id="main-content">
  <div class="container mt-4">
    <h1 class="text-center mb-4">Equivalencias</h1>

    <div class="row">
      <div class="col-md-12">
        <table class="table table-hover table-bordered">
          <thead style="background-color: #76a835; color: white">
            <tr>
              <th>Unidad 1</th>
              <th>Unidad 2</th>
              <th>Factor de conversión</th>
              <th colspan="2">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @unit_equivalences.each do |equivalence| %>
              <tr>
                <td><%= equivalence.unit_one.description %></td>
                <td><%= equivalence.unit_two.description %></td>
                <td><%= equivalence.conversion_factor %></td>
                <td>
                  <%= link_to 'Editar', edit_unit_equivalence_path(equivalence), class: 'btn btn-sm btn-outline-primary' %>
                </td>
                <td>
                  <%= button_to 'Eliminar', unit_equivalence_path(equivalence), 
                      method: :delete, 
                      class: 'btn btn-sm btn-outline-danger',
                      form: { 
                        data: { 
                          turbo_frame: '_top',
                          turbo_confirm: '¿Estás seguro?' 
                        } 
                      } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <div class="text-center mt-3">
          <%= link_to 'Nueva equivalencia', new_unit_equivalence_path, class: 'btn btn-green' %>
        </div>
      </div>
    </div>
  </div>
</turbo-frame>
